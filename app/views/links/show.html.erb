<% provide(:title, "Slack Aggregator - Links") %>
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <i class="fa fa-file"></i> Links posted on your Slack Channels
    </h1>
  </div>
</div>
<% slack_links.each do |link| %>
  <div class="col-md-11 well clearfix">
    <h3>#<%= link["channel"]["name"] %></h3>
    <div class="col-md-7">
      <p><%= link["text"] %><p>
      <kbd>Posted by - <%= link['username']%>, On: <%= DateTime.strptime((link["ts"]),"%s")%> </kbd>
    </div>
    <% 
      urls = link["text"].match(/https?:\/\/([-\w\.]+)+(:\d+)?(\/([\w\/_|\-\.]*(\?\S+)?)?)?/)
     %>
    <div class="col-md-2 pull-right">
      <%= link_to( "Visit link", urls.to_s || "#", class: "btn btn-small btn-success", target:'_blank') %>
    </div>
  </div>
<% end %>

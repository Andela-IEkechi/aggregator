<% provide(:title, "Slack Aggregator - Dashboard") %>
<% provide(:heading, "Dashboard") %>
<div class="col-lg-12">
    <h1 class="page-header">
      <i class="fa fa-file"></i> File Uploads on your Slack Channels
    </h1>
  </div>
<div class="table-row col-md-12">
  <div class="table-responsive">
    <table class="table table-condensed table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th style="width:40%">Filename</th>
          <th style="width:20%" class="hidden-phone">Type</th>
          <th style="width:10%" class="hidden-phone">Size</th>
          <th style="width:15%" class="hidden-phone">Date Uploaded</th>
          <th style="width:10%" class="hidden-phone">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% slack_files.each do |file| %>
        <tr>
          <td>
            <span class="name"><%= link_to( file["name"], file["url_download"]) %></span>
          </td>
          <td class="hidden-phone"><%= file["pretty_type"] %></td>
          <td class="hidden-phone">
            <span class="label label label-info"><%= number_to_human_size(file["size"], precision: 2) %></span>
          </td>
          <td class="hidden-phone"><%= Time.at(file["created"]) %></td>
          <td class="hidden-phone">
            <div class="btn-group">
              <button data-toggle="dropdown" class="btn btn-xs dropdown-toggle" data-original-title="" title="">
                Action 
                <span class="caret">
                </span>
              </button>
              <ul class="dropdown-menu pull-right">
                <li>
                  <%= link_to " View", file["url"], target: '_blank', class: 'fa fa-eye'%>
                </li>
                <li>
                  <%= link_to " Download", file["url_download"], target: '_blank', class: 'fa fa-download'%>
                </li>
              </ul>
            </div>
          </td>
        </tr>
        <tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
